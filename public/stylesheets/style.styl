html, body
    height: 100%
    background-color: #333

body
    font: 14px "Roboto Slab", serif
    display: -ms-flexbox
    display: flex
    color: #fff
    text-shadow: 0 .05rem .1rem rgba(0, 0, 0, .5)
    box-shadow: inset 0 0 5rem rgba(0, 0, 0, .5)
    background: url(/images/background.jpg) center center
    background-size: cover

a, a:focus, a:hover
    color: red

.btn-secondary
    color: #333
    text-shadow: none
    background-color: #fff
    border: .05rem solid #fff

    &:hover, &:focus
        background-color: #CCB54A
        border-color: #CCB54A

    &:active
        background-color: #B55A37 !important
        border-color: #B55A37

.cover-container
    max-width: 42em

.masthead
    margin-bottom: 2rem

    &-brand
        margin-bottom: 0

.nav-masthead
    .nav-link
        padding: .25rem 0
        font-weight: 700
        color: rgba(255, 255, 255, .5)
        background-color: transparent
        border-bottom: .25rem solid transparent

        & + .nav-link
            margin-left: 1rem

        &:hover, &:focus
            border-bottom-color: rgba(255, 255, 255, .25)

    .active
        color: #fff
        border-bottom-color: #fff

@media (min-width: 48em)
    .masthead-brand
        float: left

    .nav-masthead
        float: right
